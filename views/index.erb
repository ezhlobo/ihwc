<h1> Teams List </h1>
<% unless @teams.empty? %>
	<div class="box">
		<% for i in 0..1 %>
			<div class="group">
				<% for j in 0..8 %>
					<% if j == 0 %>
						<div class="legend">
							<div class="country">Команда</div>
							<div class="i">И</div>
							<div class="v">В</div>
							<div class="vo">ВО</div>
							<div class="po">ПО</div>
							<div class="p">П</div>
							<div class="gz">ГЗ</div>
							<div class="gp">ГП</div>
							<div class="rg">РГ</div>
							<div class="o">О</div>
						</div> 
					<% else %>
						<div class="team <%="t#{j}"%>">
							<div class="name country"><%= @teams.find(j+8*i).name %></div>
							<div class="i"></div>
							<div class="v"></div>
							<div class="vo"></div>
							<div class="po"></div>
							<div class="p"></div>
							<div class="gz"></div>
							<div class="gp"></div>
							<div class="rg"></div>
							<div class="o"></div>
						</div>
					<%end%>
				<% end %>
			</div>
		<% end %>
	</div>
<% else %>
   <p>There are no teams</p>
<% end %> 